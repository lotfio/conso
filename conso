use Conso\{
    Conso,Input,Output
};

require 'vendor/autoload.php';

$conso = new Conso(new Input, new Output);

$conso->setSignature("   ______
  /      \
 /$$$$$$  |  ______   _______    _______   ______
 $$ |  $$/  /      \ /       \  /       | /      \
 $$ |      /$$$$$$  |$$$$$$$  |/$$$$$$$/ /$$$$$$  |
 $$ |   __ $$ |  $$ |$$ |  $$ |$$      \ $$ |  $$ |
 $$ \__/  |$$ \__$$ |$$ |  $$ | $$$$$$  |$$ \__$$ |
 $$    $$/ $$    $$/ $$ |  $$ |/     $$/ $$    $$/
 $$$$$$/   $$$$$$/  $$/   $$/ $$$$$$$/   $$$$$$/
");

require_once 'commands.php';

$conso->run(0);